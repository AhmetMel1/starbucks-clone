@using StarbucksProje.Models
@model ProductSizeModel
@{
    ViewData["Title"] = "UpdateProductSize";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var products = Model.productModel;
    var sizes = Model.sizeModel;
    var productSize = Model.productSizeModel;
}

<div class="col-11 grid-margin stretch-card">
              <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
                <div class="card-body">
                  <h4 class="card-title">Product Size</h4>
                  <p class="card-description">
                    Product Size Update
                  </p>
                  <form class="forms-sample" action="/ProductSize/UpdateProductSize" method="post">
                      <input type="hidden" class="form-control" name="productSizeId" value="@productSize.productSizeId">
                      <div class="form-group">
                      <label>Product Name</label>
                        <select class="form-control" name="productId">
                        @foreach (var item in products)
                        {
                            if(item.productId==productSize.productId)
                            {
                                <option value="@item.productId" selected>@item.productName</option>
                            }
                            else
                            {
                             <option value="@item.productId">@item.productName</option>   
                            }                           
                        }
                    </select>
                      </div>
                      <div class="form-group">
                      <label>Size Name</label>
                        <select class="form-control" name="sizeId">
                        @foreach (var item in sizes)
                        {
                            if (item.sizeId == productSize.sizeId)
                            {
                                <option value="@item.sizeId" selected>@item.sizeName</option>
                            }
                            else
                            {
                                <option value="@item.sizeId">@item.sizeName</option>   
                            }
                        }
                    </select>
                      </div>
                    <div class="form-group">
                      <label>Size Price</label>
                      <input type="text" class="form-control" placeholder="Size Price" name="productSizePrice" value="@productSize.productSizePrice">
                    @Html.ValidationMessage("productSizePrice","",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                      <label>Size Capacity</label>
                      <input type="text" class="form-control" placeholder="Size Capacity" name="productSizeCapacity" value="@productSize.productSizeCapacity">
                    @Html.ValidationMessage("productSizeCapacity","",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                      <label>Unit Price</label>
                      <input type="text" class="form-control" placeholder="Unit Price" name="unitPrice" value="@productSize.unitPrice">
                    @Html.ValidationMessage("unitPrice","",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                      <label>Status</label>
                        <select class="form-control" name="productSizeDeleted">
                        @if (productSize.productSizeDeleted)
                        {
                                <option value="False">Active</option>
                                <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                                <option value="False" selected>Active</option>
                                    <option value="True" >Pasive</option>
                        }
                        </select>
                      </div>
                       <button type="submit" class="btn btn-inverse-info me-2">
                           <i class="mdi mdi-file-check btn-icon-prepend"></i>
                           Submit
                       </button>
                <a class="btn btn-inverse-secondary" type="reset" href="/ProductSize/Index">Cancel</a>
                  </form>
                </div>
              </div>
            </div>

