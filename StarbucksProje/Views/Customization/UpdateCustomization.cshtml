@using StarbucksProje.Models
@model CustomizationOptionModel
@{
    ViewData["Title"] = "UpdateCustomization";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var options = Model.optionModel;
    var customization = Model.customizationModel;
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Customization</h4>
            <p class="card-description">
                Customization Update
            </p>
            <form class="forms-sample" action="/Customization/UpdateCustomization" method="post">
                <input type="hidden" class="form-control" name="customizationId" value="@customization.customizationId">
                <div class="form-group">
                    <label>Customization Name</label>
                    <input type="text" class="form-control" placeholder="Customization Name" name="customizationName" value="@customization.customizationName">
                </div>
                <div class="form-group">
                    <label>Option Name</label>
                    <select class="form-control" name="optionId">
                        @foreach (var item in options)
                        {
                            if(customization.optionId==item.optionId)
                            {
                                <option value="@item.optionId" selected>@item.optionName</option>
                            }
                            else
                            {
                                <option value="@item.optionId">@item.optionName</option>
                            }
                        }
                    </select>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="customizationDeleted">
                            @if(customization.customizationDeleted)
                        {
                            <option value="False">Active</option>
                            <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                            <option value="False" selected>Active</option>
                                <option value="True" >Pasive</option>
                        }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-inverse-info me-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>
                        Submit
                    </button>
                    <a class="btn btn-inverse-secondary" type="reset" href="/Customization/ListCustomization">Cancel</a>
            </form>
        </div>
    </div>
</div>


