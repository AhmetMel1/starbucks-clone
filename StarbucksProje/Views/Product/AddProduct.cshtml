@using StarbucksProje.Models
@model CategoryProductModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <p class="card-description">
                Product Add
            </p>
            <form class="forms-sample" action="/Product/AddProduct" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Product Name</label>
                    <input type="text" class="form-control" placeholder="Product Name" name="productName" value="@Model.productModel.productName">
                    @Html.ValidationMessage("productName","",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Product Logo</label>
                    <input type="file" class="form-control" name="imgFile">
                    @Html.ValidationMessage("imgFile","",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Product Description</label>
                    <input type="text" class="form-control" placeholder="Product Description" name="productDescription" value="@Model.productModel.productDescription">
                    @Html.ValidationMessage("productDescription","",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Category Name</label>
                    <select class="form-control" name="categoryId">
                        @foreach (var item in Model.categoryModel)
                        {
                            <option value="@item.categoryId">@item.categoryName</option>
                        }
                    </select>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="productDeleted">
                            <option value="False">Active</option>
                            <option value="True">Pasive</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-inverse-info me-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>
                        Submit
                    </button>
                    <a class="btn btn-inverse-secondary" type="reset" href="/Product/products-list">Cancel</a>
            </form>
        </div>
    </div>
</div>

