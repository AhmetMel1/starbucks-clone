@using EntityLayer
@model Order
@{
    ViewData["Title"] = "UpdateOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
    <div class="card m-5 overflow-auto" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Address</h4>
            <p class="card-description">
                Order Update
            </p>
            <form class="forms-sample" action="/Order/UpdateOrder" method="post">
                <input type="hidden" class="form-control" name="orderId" value="@Model.orderId">
                <div class="form-group">
                    <label>Payment Type</label>
                    <input type="text" class="form-control" placeholder="Payment Type" name="paymentType" value="@Model.paymentType">
                </div>
                <div class="form-group">
                    <label>Order Date</label>
                    <input type="text" class="form-control" placeholder="Order Date" name="orderDate" value="@Model.orderDate">
                </div>
                <div class="form-group">
                    <label>Order Quantity</label>
                    <input type="text" class="form-control" placeholder="Order Quantity" name="orderQuantity" value="@Model.orderQuantity">
                </div>
                <div class="form-group">
                    <label>Card Added Date</label>
                    <input type="text" class="form-control" placeholder="Card Added Date" name="cardAddedDate" value="@Model.cardAddedDate">
                </div>
                <div class="form-group">
                    <label>orderDeleted</label>
                    <input type="text" class="form-control" placeholder="Order Deletede" name="orderDeletede" value="@Model.orderDeleted">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Status</label>
                    <select class="form-control" name="orderDeleted">
                        @if (Model.orderDeleted)
                        {
                            <option value="False">Active</option>
                            <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                            <option value="False" selected>Active</option>
                            <option value="True">Pasive</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-inverse-info me-2">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i>
                    Submit
                </button>
                <a class="btn btn-inverse-secondary" type="reset" href="/Order/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

