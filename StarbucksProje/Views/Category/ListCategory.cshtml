@using EntityLayer
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-11 grid-margin stretch-card">

    <div class="table-responsive card m-5 overflow-auto" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Logo</th>
                    <th>Parent Category Name</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.categoryName</td>
                        <td>@item.categoryLogoUrl</td>
                        @if(@item.categoryParentId==null)
                        {
                        <td>Itself Parent</td>
                        }
                        else
                        {
                        <td>@item.categoryParent.categoryName</td>
                        }
                        @if (@item.categoryDeleted)
                        {
                            <td>Pasive</td>
                        }
                        else
                        {
                            <td>Active</td>
                        }
                        <td>

                            <button type="button" class="btn btn-inverse-danger btn-fw" data-bs-whatever="@item.categoryId" data-bs-toggle="modal" data-bs-target="#decisionPopup"><ion-icon name="trash-sharp"></ion-icon></button>
                        </td>
                        <td><a href="/Category/UpdateCategory/@item.categoryId" type="button" class="btn btn-inverse-warning btn-fw">Update</a></td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-center d-flex justify-content-start">
            <a href="/Category/AddCategory" class="btn btn-inverse-success btn-fw m-2" style="font-size:20px"><ion-icon name="add"></ion-icon></a>
        </div>
    </div>
</div>

<!-- Modal -->
@*#decisionPopup Model*@
<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="deleteLabel">Warning!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-inverse-secondary" data-bs-dismiss="modal">No</button>
                <a id="delete-btn" href="" class="btn btn-inverse-success">Yes</a>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#decisionPopup').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var categoryId = button.attr('data-bs-whatever');
            var a = document.querySelector("#delete-btn");
            a.href = "/Category/DeleteCategory/" + categoryId;
        });
    });
</script>