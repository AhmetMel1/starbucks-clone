@using StarbucksProje.Models
@model StoreProductModel
@{
    ViewData["Title"] = "UpdateStoreProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var products = Model.productModel;
    var store = Model.storeModel;
    var storeProduct = Model.storeProductModel;
}
<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Store Product</h4>
            <p class="card-description">
               Store Product Update
            </p>
            <form class="forms-sample" action="/StoreProduct/UpdateStoreProduct" method="post">
                <input type="hidden" class="form-control" name="StoreProductId" value="@storeProduct.StoreProductId">
                <div class="form-group">
                    <label>Product Name</label>
                    <select class="form-control" name="productId">
                        @foreach (var item in products)
                        {
                            if (item.productId == storeProduct.productId)
                            {
                                        <option value="@item.productId" selected>@item.productName</option>
                            }
                            else
                            {
                                        <option value="@item.productId">@item.productName</option>
                            }
                        }
                    </select>
                    </div>
                    <div class="form-group">
                    <label>Store Name</label>
                    <select class="form-control" name="StoreId">
                        @foreach (var item in store)
                        {
                            if (item.StoreId == storeProduct.StoreId)
                            {
                                                <option value="@item.StoreId" selected>@item.StoreName</option>
                            }
                            else
                            {
                                                <option value="@item.StoreId">@item.StoreName</option>
                            }
                        }
                    </select>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="StoreProductDeleted">
                        @if (storeProduct.StoreProductDeleted)
                        {
                                    <option value="False">Active</option>
                                    <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                                    <option value="False" selected>Active</option>
                                        <option value="True" >Pasive</option>
                        }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-inverse-info me-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>
                        Submit
                    </button>
                    <a class="btn btn-inverse-secondary" type="reset" href="/StoreProduct/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
