@using StarbucksProje.PagedList
@model Pager;
@{
    var action_name = ViewBag.actionName;
    var contr_name = ViewBag.contrName;
    var searchText = ViewBag.searchText;
}
<nav aria-label="Page navigation example">
    @if (@Model != null && @Model.totalPageNumber > 0)
    {
        <ul class="pagination justify-content-end">
            <li class="page-item @(Model.activePage>1?"":"disabled")">
                <a class="page-link" asp-controller="@contr_name" asp-action="@action_name" asp-route-page="1" asp-route-searchText="@searchText">Başa Dön</a>
            </li>
            <li class="page-item @(Model.activePage>1?"":"disabled")">
                <a class="page-link" asp-controller="@contr_name" asp-action="@action_name" asp-route-page="@(Model.activePage-1)" asp-route-searchText="@searchText">Geri</a>
            </li>
            @for (var i = Model.startPage; i <= Model.endPage; i++)
            {
                <li class="page-item @(Model.activePage==@i?"active":"")"><a class="page-link" asp-controller="@contr_name" asp-action="@action_name" asp-route-page="@i" asp-route-searchText="@searchText">@i</a></li>
            }

            <li class="page-item @(Model.activePage<Model.totalPageNumber?"":"disabled")">
                <a class="page-link" asp-controller="@contr_name" asp-action="@action_name" asp-route-page="@(Model.activePage+1)" asp-route-searchText="@searchText">İleri</a>
            </li>
            <li class="page-item @(Model.activePage<Model.totalPageNumber?"":"invisible")">
                <a class="page-link" asp-controller="@contr_name" asp-action="@action_name" asp-route-page="@(Model.activePage)" asp-route-searchText="@searchText">Sona Git</a>
            </li>
        </ul>
    }
</nav>

