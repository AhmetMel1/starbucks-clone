@using StarbucksProje.Models
@model FavoriteUserProductModel
@{
    ViewData["Title"] = "UpdateFavorite";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Cargo Process</h4>
            <p class="card-description">
                Favorite Update
            </p>
            <form class="forms-sample" action="/Favorite/UpdateFavorite" method="post">
                <input type="hidden" class="form-control" name="favoriteId" value="@Model.favoriteModel.favoriteId">
                <div class="form-group">
                    <label>Upload Date</label>
                    <input type="date" class="form-control" placeholder="Upload Date" name="uploadDate" value="@Model.favoriteModel.uploadDate">
                </div>
                <div class="form-group">
                    <label>User Name</label>
                    <select class="form-control" name="userId">
                        @foreach (var item in Model.userModel)
                        {
                            @if (item.userId == Model.favoriteModel.userId)
                            {
                                <option value="@item.userId" selected>@item.name</option>
                            }
                            else
                            {
                             <option value="@item.userId">@item.name</option>   
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Product Name</label>
                    <select class="form-control" name="productId">
                        @foreach (var item in Model.productModel)
                        {
                            @if (item.productId == Model.favoriteModel.productId)
                            {
                                <option value="@item.productId" selected>@item.productName</option>
                            }
                            else
                            {
                                <option value="@item.productId">@item.productName</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="favoriteDeleted">
                       @if(Model.favoriteModel.favoriteDeleted)
                        {
                         <option value="False">Active</option>
                            <option value="True"selected>Pasive</option>
                        }
                        else
                        {
                                <option value="False"selected>Active</option>
                                <option value="True">Pasive</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-inverse-info me-2">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i>
                    Submit
                </button>
                <a class="btn btn-inverse-secondary" type="reset" href="/Favorite/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
