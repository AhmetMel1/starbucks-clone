@using EntityLayer
@model StoreFavoriteModel
@{
    ViewData["Title"] = "UpdateStoreFavorite";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var user = Model.userModel;
    var store = Model.storeModel;
    var storeFavorite = Model.storeFavoriteModel;
}

<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Store Favorite</h4>
            <p class="card-description">
               Store Favorite Update
            </p>
            <form class="forms-sample" action="/StoreFavorite/UpdateStoreFavorite" method="post">
                <input type="hidden" class="form-control" name="StoreFavoriteId" value="@storeFavorite.StoreFavoriteId">
                <div class="form-group">
                    <label>Store Name</label>
                    <select class="form-control" name="StoreId">
                        @foreach (var item in store)
                        {
                            if (item.StoreId ==storeFavorite.StoreId)
                            {
                                        <option value="@item.StoreId" selected>@item.StoreName</option>
                            }
                            else
                            {
                                        <option value="@item.StoreId">@item.StoreName</option>
                            }
                        }
                    </select>
                    </div>
                     <div class="form-group">
                    <label>User Name</label>
                    <select class="form-control" name="userId">
                        @foreach (var item in user)
                        {
                            if (item.userId == storeFavorite.StoreId)
                            {
                                <option value="@item.userId" selected>@item.name @item.surname</option>
                            }
                            else
                            {
                                        <option value="@item.userId">@item.name @item.surname</option>
                            }
                        }
                    </select>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="productCustomizationDeleted">
                        @if (storeFavorite.StoreFavoriteDeleted)
                        {
                                    <option value="False">Active</option>
                                    <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                                    <option value="False" selected>Active</option>
                                        <option value="True" >Pasive</option>
                        }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-inverse-info me-2">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>
                        Submit
                    </button>
                    <a class="btn btn-inverse-secondary" type="reset" href="/StoreFavorite/ListStoreFavorite">Cancel</a>
            </form>
        </div>
    </div>
</div>

