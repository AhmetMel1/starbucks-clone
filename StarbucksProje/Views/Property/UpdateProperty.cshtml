@using EntityLayer
@model Property
@{
    ViewData["Title"] = "UpdateProperty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 grid-margin stretch-card">
    <div class="card m-5" style="box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
        <div class="card-body">
            <h4 class="card-title">Property</h4>
            <p class="card-description">
                Property Add
            </p>
            <form class="forms-sample" action="/Property/UpdateProperty" method="post">
                <input type="hidden" class="form-control" name="PropertyId" value="@Model.PropertyId">
                <div class="form-group">
                    <label>Property Name</label>
                    <input type="text" class="form-control" placeholder="Property Name" name="PropertyName" value="@Model.PropertyName">
                    @Html.ValidationMessage("PropertyName","",new{@class="text-danger"})
                </div>
                <div class="form-group">
                    <label>Property Mode</label>
                    <select class="form-control" name="PropertyMode">
                        @if (Model.PropertyMode)
                        {
                            <option value="False">Not Available</option>
                            <option value="True" selected>Available</option>
                        }
                        else
                        {
                            <option value="False">Not Available</option>
                            <option value="True" selected>Available</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="PropertyDeleted">
                        @if (Model.PropertyDeleted)
                        {
                                <option value="False">Active</option>
                                <option value="True" selected>Pasive</option>
                        }
                        else
                        {
                                <option value="False" selected>Active</option>
                                    <option value="True" >Pasive</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-inverse-info me-2">
                           <i class="mdi mdi-file-check btn-icon-prepend"></i>
                           Submit
                       </button>
                <a class="btn btn-inverse-secondary" type="reset" href="/Property/ListProperty">Cancel</a>
            </form>
        </div>
    </div>
</div>
